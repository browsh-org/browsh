{
  "env" : {
    "es6": true,
    "node" : true,
    "browser" : true,
    "webextensions": true,
    "mocha": true
  },
  "globals": {
    "DEVELOPMENT": true,
    "PRODUCTION": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "extends": "eslint:recommended",
  "rules": {
    "no-unused-vars": [2, {"args": "all", "argsIgnorePattern": "^_"}]
  }
}
